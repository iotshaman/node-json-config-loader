{
  "name": "node-json-config-loader",
  "version": "1.1.2",
  "description": "JSON Configuration File Loader for Node Js Applications. Includes an application secret loader, simply pass in a secret mapping and a value store (environment variables, for example).",
  "main": "scripts/index.js",
  "repository": {
    "url": "https://github.com/iotshaman/node-json-config-loader"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node ./app/index.js",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Kyle Brown",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/mocha": "5.2.5",
    "@types/node": "10.5.8",
    "chai": "4.1.2",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "mocha": "5.2.0",
    "node-cache": "^4.1.1",
    "nyc": "^12.0.2",
    "ts-node": "7.0.1",
    "typescript": "3.0.1"
  },
  "dependencies": {
    "promise": "^8.0.1",
    "fs-extra": "^5.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.js",
      "coverage/*",
      "dist/*"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  }
}
